FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies (including dev dependencies for hot reloading)
RUN npm ci

# Copy source code
COPY . .

# Expose port for Vite dev server
EXPOSE 3000

# Use Vite dev server for hot reloading
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "3000"]
